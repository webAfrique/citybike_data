{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "paths": { 
        "@app/*": ["src/*"],
        "@test/*": ["test/*"]
    }
}